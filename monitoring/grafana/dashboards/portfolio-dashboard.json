{
  "dashboard": {
    "id": null,
    "title": "Portfolio Analytics Dashboard",
    "tags": ["portfolio", "analytics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Page Views",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(portfolio_page_views_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Login Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(portfolio_admin_login_attempts_total{status=\"success\"}[5m]) / rate(portfolio_admin_login_attempts_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Request Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "portfolio_http_request_duration_seconds",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
